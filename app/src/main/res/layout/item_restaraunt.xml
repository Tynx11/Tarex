<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="15dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/asd"
            app:riv_corner_radius="8dp" />


    </android.support.v7.widget.CardView>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:typeface="sans"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            tools:text="HUMO Chaihona restaraunt" />
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            tools:text="Lorem ipsum dolar sit amet, consectetur adiping elit. "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_name">
            <ImageView
                android:id="@+id/iv_rybl_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ryblyellow"/>
            <ImageView
                android:id="@+id/iv_rybl_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toEndOf="@id/iv_rybl_1"
                android:layout_marginTop="16dp"
                android:src="@drawable/ryblyellow"/>
            <ImageView
                android:id="@+id/iv_rybl_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ryblyellow"/>
            <ImageView
                android:id="@+id/iv_rybl_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ryblgrey"/>
            <ImageView
                android:id="@+id/iv_rybl_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ryblgrey"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>