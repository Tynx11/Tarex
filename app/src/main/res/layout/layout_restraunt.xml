<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_restaraunt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_restaraunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_large"
            tools:text="@string/name_restaraunt"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_small"
            tools:text="Аделя Кутуя ул., 16 " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/colorBlack"
            android:text="@string/working_hours"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:textColor="@color/colorBlack"
                android:text="@string/monday" />

            <TextView
                android:id="@+id/tv_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_1"
                android:text="10-18"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/line"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_1"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_large"
                android:textColor="@color/colorBlack"
                android:text="@string/tuesday"/>

            <TextView
                android:id="@+id/tv_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_1"
                android:layout_below="@id/tv_2"
                android:text="10-18"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/line"
                android:layout_toRightOf="@id/tv_1"/>

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_2"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_large"
                android:textColor="@color/colorBlack"
                android:text="@string/wednesday"/>

            <TextView
                android:id="@+id/tv_wedensday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_2"
                android:layout_below="@id/tv_3"
                android:text="10-18"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/line"
                android:layout_toRightOf="@id/tv_2"/>

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_3"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_large"
                android:textColor="@color/colorBlack"
                android:text="@string/thursday"/>

            <TextView
                android:id="@+id/tv_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_3"
                android:layout_below="@id/tv_4"
                android:text="10-18"/>

            <ImageView
                android:id="@+id/suturday"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/line"
                android:layout_toRightOf="@id/tv_3"/>

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_4"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_large"
                android:textColor="@color/colorBlack"
                android:text="@string/friday"/>

            <TextView
                android:id="@+id/tv_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_4"
                android:layout_below="@id/tv_5"
                android:text="10-18"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/line"
                android:layout_toRightOf="@id/tv_4"/>

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_5"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_xlarge"
                android:textColor="@color/colorBlack"
                android:text="@string/saturday"/>

            <TextView
                android:id="@+id/tv_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_5"
                android:layout_below="@id/tv_6"
                android:text="10-18"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:src="@drawable/line"
                android:layout_toRightOf="@id/tv_5"/>

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_6"
                android:textColor="@color/colorBlack"
                android:text="@string/sunday"/>

            <TextView
                android:id="@+id/tv_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_toRightOf="@id/tv_6"
                android:layout_below="@id/tv_7"
                android:text="10-18"/>

        </RelativeLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <ImageView
                    android:id="@+id/iv_average_bill"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ryblgrey"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/iv_kitchen"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/iv_average_bill"
                    android:src="@drawable/ryblgrey"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/iv_kitchen_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/iv_kitchen"
                    android:src="@drawable/ryblgrey"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/iv_buisness_lunch"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/iv_kitchen_2"
                    android:src="@drawable/ryblgrey"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/iv_live_music"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/iv_buisness_lunch"
                    android:src="@drawable/ryblyellow"
                    />
                <ImageView
                    android:id="@+id/iv_summer_place"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ryblgrey" />
                <ImageView
                    android:id="@+id/iv_bar_map"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/iv_summer_place"
                    android:src="@drawable/ryblgrey" />
                <ImageView
                    android:id="@+id/iv_club"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/iv_bar_map"
                    android:src="@drawable/ryblgrey" />
                <ImageView
                    android:id="@+id/iv_dance"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/iv_club"
                    android:src="@drawable/ryblgrey" />
                <ImageView
                    android:id="@+id/iv_snack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/iv_dance"
                    android:src="@drawable/ryblyellow" />
                <ImageView
                    android:id="@+id/iv_hookah"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/iv_snack"
                    android:src="@drawable/ryblgrey" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_description_details_restaraunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_large"
            android:text="Фото"/>

        <LinearLayout
            android:id="@+id/ll_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

        </LinearLayout>




        <ProgressBar
            android:id="@+id/progress_loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_medium"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>